source 'https://rubygems.org'

ruby '2.0.0'

# Simple routing
gem 'sinatra'

# Web server
gem 'puma'

# Use the right host
gem 'rack-canonical-host'

# Markdown -> HTML
gem 'redcarpet'

# HTML -> Markdown
gem 'unmarkdown'

# Code coloring
gem 'pygments.rb', require: false

# Stylesheets
gem 'sprockets'
gem 'sprockets-sass'
gem 'sass'

# Javascript
gem 'coffee-script'
gem 'uglifier'

group :development do
  # Reloading in development
  gem 'shotgun'
end
